<body>

  <div class="container">
    <h2>Progreso del per√≠odo</h2>

    <div class="progress-container">
      <div class="progress-bar" id="progressBar"></div>
    </div>

    <p id="progressText"></p>
  </div>

  <script>
    function updateProgress() {
      // üìÖ PER√çODO (cruza de a√±o)
      const startDate = new Date(2024, 11, 15); // 15 diciembre 2024
      const endDate   = new Date(2025, 0, 27);  // 27 enero 2025

      // üïõ Normalizar a medianoche para evitar errores
      const today = new Date();
      today.setHours(0,0,0,0);
      startDate.setHours(0,0,0,0);
      endDate.setHours(0,0,0,0);

      const totalDays =
        (endDate - startDate) / (1000 * 60 * 60 * 24);

      const elapsedDays = Math.min(
        Math.max(
          (today - startDate) / (1000 * 60 * 60 * 24),
          0
        ),
        totalDays
      );

      const progressPercent = (elapsedDays / totalDays) * 100;

      document.getElementById("progressBar").style.width =
        progressPercent.toFixed(2) + "%";

      document.getElementById("progressText").textContent =
        `D√≠as transcurridos: ${Math.floor(elapsedDays)} de ${Math.floor(totalDays)} (${progressPercent.toFixed(1)}%)`;
    }

    // ‚ñ∂Ô∏è Ejecutar al cargar
    updateProgress();

    // üîÑ Actualizar autom√°ticamente una vez por d√≠a
    setInterval(updateProgress, 1000 * 60 * 60 * 24);
  </script>

</body>
