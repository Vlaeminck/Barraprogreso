      box-shadow: 0 4px 10px rgba(0,0,0,0.1);
      text-align: center;
    }

    .progress-container {
      width: 100%;
      height: 25px;
      background-color: #e0e0e0;
      border-radius: 20px;
      overflow: hidden;
      margin: 15px 0;
    }

    .progress-bar {
      height: 100%;
      width: 0%;
      background-color: #4caf50;
      transition: width 0.6s ease;
    }

    p {
      font-size: 14px;
